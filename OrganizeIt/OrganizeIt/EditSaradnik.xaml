<Page x:Class="OrganizeIt.EditSaradnik"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:OrganizeIt"
      xmlns:l="clr-namespace:HelpSistem"
      mc:Ignorable="d"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditSaradnik" l:HelpProvider.HelpKey="EditSaradnikPage">

    <Grid Background="White">
        <Button Content="Nazad" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource MaterialDesignFlatButton}"/>
        <Border Margin="15" MinWidth="600" MinHeight="00" Background="White" VerticalAlignment="Center" Padding="10" CornerRadius="10" MaxWidth="800">
            <StackPanel>
                <Image Height="100"  Source="C:\Users\Jovana\Desktop\sl.PNG"/>

                <TextBox materialDesign:HintAssist.Hint="Naziv" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding Name, Mode = TwoWay}" Margin="0 0 0 5"/>

                <TextBox
                  Name="tbMultiLine"
                  TextWrapping="Wrap"
                  AcceptsReturn="True"
                  VerticalScrollBarVisibility="Visible"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Opis"
                 
                  MinHeight="20"
                  Text="{Binding Description, Mode = TwoWay}"
                  Margin="0 0 0 20"
                >
                </TextBox>

                <Grid Margin="0 0 0 20">
                    <Button HorizontalAlignment="Left" Content="Otkaži" Width ="200" Margin="0 0 401 5" Click="Button_Click_1"/>
                    <Button HorizontalAlignment="Right" Content="Izmeni saradnika" Width ="200"  Margin="401 0 0 5" Click="Button_Click"/>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Page>